---
interface Props {
  quote: string;
  author: string;
  href?: string;
}

const { quote, author, href } = Astro.props;
---

<div class="w-full flex justify-center bg-black py-8">
  {href ? (
    <a href={href} class="block max-w-2xl mx-auto no-underline hover:no-underline focus:no-underline">
      <blockquote class="italic text-xl text-gray-200 max-w-2xl mx-auto text-center px-4 transition-colors duration-200 hover:text-primary focus:text-primary">
        &ldquo;{quote}&rdquo;
        <br />
        <span class="text-base text-gray-400">&mdash; {author}</span>
      </blockquote>
    </a>
  ) : (
    <blockquote class="italic text-xl text-gray-200 max-w-2xl mx-auto text-center px-4">
      &ldquo;{quote}&rdquo;
      <br />
      <span class="text-base text-gray-400">&mdash; {author}</span>
    </blockquote>
  )}
</div> 