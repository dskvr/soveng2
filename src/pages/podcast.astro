---
import BaseNoHeader from "@/layouts/BaseNoHeader.astro";

// Meta-essence distilled manually from all episode notes
const metaParagraph = `Across a dozen walk-and-talk sessions the No Solutions crew keeps circling the same north star: **freedom is an engineering practice**. Ship ugly, ship weekly, and invite the world's critique. Momentum replaces perfection, open protocols (Bitcoin, Lightning, Nostr, eCash) replace gate-keepers, and conversations on the trail turn chaos into code that empowers the individual.`;

const metaQuote = `"Start ugly, iterate publicly, and keep walking—this is Sovereign Engineering in motion."`;

const pageTitle = "Podcast – Meta Essence";
const pageDescription = "A distilled takeaway from every No Solutions conversation.";
---

<BaseNoHeader title={pageTitle} description={pageDescription}>
  <section class="section-sm">
    <div class="container mx-auto md:w-3/4 lg:w-2/3 text-center">
      <h1 class="h2 mb-8">{pageTitle}</h1>
      <p class="text-lg leading-relaxed mb-12" set:html={metaParagraph} />
      <blockquote class="italic text-xl font-secondary text-primary max-w-prose mx-auto">{metaQuote}</blockquote>
    </div>
  </section>
</BaseNoHeader> 