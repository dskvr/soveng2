---
import Base from "@/layouts/Base.astro";
import BigBlockQuote from "@/layouts/components/BigBlockQuote.astro";
import ContentSection from "@/layouts/components/ContentSection.astro";
import DynamicIcon from "@/helpers/DynamicIcon";

// Meta-essence distilled manually from all episode notes
const metaParagraph = `Across a dozen walking dialogues the <strong>No Solutions</strong> crew keeps circling the same north star: <strong>freedom is an engineering practice</strong>. Start ugly, ship weekly, and invite the world's critique. Momentum replaces perfection, open protocols replace gate-keepers, and conversations on the trail turn wild ideas into code that empowers the individual.`;

const metaQuote = `"Start ugly, iterate publicly, and keep walkingâ€”this is Sovereign Engineering in motion."`;

const pageTitle = "No Solutions";
const byline = `Walking towards a better internet since <a href="https://mempool.space/block/882690" target="_blank" rel="noopener noreferrer">882,690</a>.`;
const pageDescription = "No Solutions podcast";

---

<Base title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="section-sm bg-black text-white pt-[8rem]">
    <div class="container">
      <!-- Header -->
      <div class="row justify-center">
        <div class="col-12 text-center">
          <a href="https://podcastindex.org/podcast/7206062" target="_blank" rel="noopener noreferrer">
            <img src="/images/nosolutions-cover.jpg" alt="No Solutions Podcast Cover" class="mx-auto mb-6 w-48 h-48 shadow-lg object-cover" />
          </a>
          <h1 class="mb-4 text-white uppercase" style="font-size: 3rem;">{pageTitle}</h1>
          <p class="text-sm uppercase tracking-wider mb-8 text-gray-300" set:html={byline} />
        </div>
      </div>
      
      <!-- Centered Quote -->
      <BigBlockQuote 
        quote={metaQuote}
        author="The No Solutions Crew"
      />
      
      <!-- Content Section -->
      <div class="row justify-center">
        <div class="max-w-[960px] mx-auto">
          <div class="content [&>p]:text-xl [&>p]:text-white mb-12">
            <p set:html={metaParagraph} />
          </div>
        </div>
      </div>

      <!-- Platform Links -->
      <div class="row justify-center">
        <div class="md:col-10 lg:col-8">
          <h2 class="mb-6 text-white uppercase text-center" style="font-size: 2rem;">Listen & Subscribe</h2>
          <ul class="mb-12">
            <li class="flex items-center mb-4 text-white text-lg">
              <span class="mr-3 flex-shrink-0 text-white">&#10022;</span>
              <span class="text-lg">
                <a href="https://castr.me/npub1n00yy9y3704drtpph5wszen64w287nquftkcwcjv7gnnkpk2q54s73000n" target="_blank" rel="noopener noreferrer" class="text-white hover:text-primary transition-colors">
                  Listen on castr.me
                </a> - Native Nostr podcast app
              </span>
            </li>
            <li class="flex items-center mb-4 text-white text-lg">
              <span class="mr-3 flex-shrink-0 text-white">&#10022;</span>
              <span class="text-lg">
                <a href="https://podcastindex.org/podcast/7206062" target="_blank" rel="noopener noreferrer" class="text-white hover:text-primary transition-colors">
                  Podcast Index
                </a> - Independent podcast directory
              </span>
            </li>
            <li class="flex items-center mb-4 text-white text-lg">
              <span class="mr-3 flex-shrink-0 text-white">&#10022;</span>
              <span class="text-lg">
                <a href="https://sovereignengineering.io/dialogues.xml" target="_blank" rel="noopener noreferrer" class="text-white hover:text-primary transition-colors">
                  <DynamicIcon icon="FaRss" className="inline-block w-4 h-4 mr-2 align-text-bottom" />
                  RSS Feed
                </a> - Direct RSS subscription
              </span>
            </li>
            <li class="flex items-center mb-4 text-white text-lg">
              <span class="mr-3 flex-shrink-0 text-white">&#10022;</span>
              <span class="text-lg">
                <a href="https://njump.me/nosolutions@sovereignengineering.io" target="_blank" rel="noopener noreferrer" class="text-white hover:text-primary transition-colors">
                  <DynamicIcon icon="FaFeather" className="inline-block w-4 h-4 mr-2 align-text-bottom" />
                  Nostr Profile
                </a> - Follow us on Nostr
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Base>